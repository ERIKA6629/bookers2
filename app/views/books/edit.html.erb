<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <p>Title</p>
          <%= f.text_field :title %>
        </div>
        
        <div class="form-group">
          <p>Opinion</p>
          <%= f.text_area :body %><br>
        </div>
        
        <div class="form-group">
          <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>