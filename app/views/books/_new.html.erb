
    <div class="col-md-3">
      <h2>Users info</h2>
      <div>
        <%= image_tag user.get_profile_image %>
      </div>
      
      <table class="table">
        <tbody>
          <tr>
            <td>name</td>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <td>introduction</td>
            <td><%= user.introduction %></td>
          </tr>
        </tbody>
      </table>
      
      <div class="row">
          <%= link_to edit_user_path(user.id), class: "btn btn btn-outline-secondary btn-block", method: :get do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
        
      </div>
      
      <h2 class="mt-3">New book</h2>

      <%= form_with model: book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        
        <p>Opinion</p>
        <%= f.text_area :body %><br>
        
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
        
      <% end %>
      
    </div>
  

