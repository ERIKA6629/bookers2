<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
  <p>Name</p>
  <%= f.text_field :name %>
  
  <p>Image</p>
  <%= f.file_field :image, accept: "image/*" %>
  
  <p>Introduction</p>
  <%= f.text_area :introduction %><br>
  
  <%= f.submit 'Update User' %>
<% end %>