<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/new',book: @book, user: @user %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          
          <% @user_index.each do |f| %>    
            <tbody>
              <tr>
                <td><%= image_tag f.get_image %></td>
                <td><%= f.name %></td>
                <td><%= link_to "Show", user_path(f) %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>