<h1>Users info</h1>
<div>
  <%= image_tag @user.get_image %>
</div>

<table>
  <tbody>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= @user.introduction %></td>
    </tr>
  </tbody>
</table>
<% if @user == current_user %>
  <%= link_to edit_user_path, class: "btn btn btn-secondary text-white", method: :get do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
<% end %>