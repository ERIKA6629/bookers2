<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'books/new',book: @book, user: @user %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          
          <% @book_index.each do |f| %>   
            <% if f.user_id == @user.id %>
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(f.user_id) do %>
                    <%= image_tag f.user.get_profile_image %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(f) do %>
                    <%= f.title %>
                  <% end %>
                </td>
                <td><%= f.body %></td>
              </tr>
            </tbody>
            <% end %>
          <% end %>
        </table>

    </div>
  
  </div>

</div>